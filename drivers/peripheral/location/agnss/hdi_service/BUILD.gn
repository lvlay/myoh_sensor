import("//build/ohos.gni")
import("//drivers/hdf_core/adapter/uhdf2/uhdf.gni")
import("../../location.gni")

ohos_shared_library("libagnss_interface_service_2.0") {
  include_dirs = [
    "${location_driver_path}/agnss/hdi_service",
    "${location_driver_path}/gnss/hdi_service",
  ]
  sources = [ "agnss_interface_impl.cpp" ]

  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
  }
  branch_protector_ret = "pac_ret"

  cflags = [
    "-Wall",
    "-Wextra",
    "-Werror",
    "-fsigned-char",
    "-fno-common",
    "-fno-strict-aliasing",
  ]

  if (is_standard_system) {
    external_deps = [
      "c_utils:utils",
      "drivers_interface_location_agnss:location_agnss_idl_headers",
      "hdf_core:libhdi",
      "hilog:libhilog",
      "ipc:ipc_single",
    ]
  } else {
    external_deps = [
      "hilog:libhilog",
      "ipc:ipc_single",
    ]
  }

  external_deps +=
      [ "drivers_peripheral_location_gnss:libgnss_interface_service_2.0" ]

  install_images = [ chipset_base_dir ]
  subsystem_name = "hdf"
  part_name = "drivers_peripheral_location_agnss"
}

ohos_shared_library("liblocation_agnss_hdi_driver") {
  include_dirs = [ "${location_driver_path}/agnss/hdi_service" ]

  sources = [ "agnss_interface_driver.cpp" ]

  cflags = [
    "-Wall",
    "-Wextra",
    "-Werror",
    "-fsigned-char",
    "-fno-common",
    "-fno-strict-aliasing",
  ]

  if (is_standard_system) {
    external_deps = [
      "c_utils:utils",
      "hdf_core:libhdf_host",
      "hdf_core:libhdf_ipc_adapter",
      "hdf_core:libhdf_utils",
      "hdf_core:libhdi",
      "hilog:libhilog",
      "ipc:ipc_single",
    ]
  } else {
    external_deps = [
      "hilog:libhilog",
      "ipc:ipc_single",
    ]
  }

  external_deps +=
      [ "drivers_interface_location_agnss:liblocation_agnss_stub_2.0" ]

  shlib_type = "hdi"
  install_images = [ chipset_base_dir ]
  subsystem_name = "hdf"
  part_name = "drivers_peripheral_location_agnss"
}

group("hdi_location_agnss_service") {
  deps = [
    ":libagnss_interface_service_2.0",
    ":liblocation_agnss_hdi_driver",
  ]
}
