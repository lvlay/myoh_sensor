HDF_CORE_PATH = "../../../../../hdf_core"
import("//build/ohos.gni")
import("//build/test.gni")
import("$HDF_CORE_PATH/adapter/uhdf2/uhdf.gni")
import("../../../motion.gni")

module_output_path = "drivers_peripheral_motion/motion"

ohos_unittest("hdi_unittest_motion") {
  module_out_path = module_output_path

  include_dirs = []

  sources = [
    "hdf_motion_hdi_test.cpp",
    "motion_callback_impl.cpp",
  ]
  cflags = [
    "-Wall",
    "-Wextra",
    "-Werror",
    "-fsigned-char",
    "-fno-common",
    "-fno-strict-aliasing",
  ]

  if (is_standard_system) {
    external_deps = [
      "drivers_interface_motion:libmotion_proxy_1.1",
      "hdf_core:libhdf_utils",
      "hilog:libhilog",
      "ipc:ipc_single",
    ]
    if (motion_c_utils_enable) {
      external_deps += [ "c_utils:utils" ]
    }
  }
  external_deps += [ "ipc:ipc_single" ]
}
