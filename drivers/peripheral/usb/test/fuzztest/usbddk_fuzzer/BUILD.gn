import("//build/config/features.gni")
import("//build/ohos.gni")
import("//build/test.gni")
module_output_path = "drivers_peripheral_usb/drivers_peripheral_usb"

ohos_fuzztest("UsbDdkFuzzTest") {
  module_out_path = module_output_path

  fuzz_config_file = "../usbddk_fuzzer"

  include_dirs = [
    "../usbddk_fuzzer",
    "../../../../../../base/usb/usb_manager/utils/native/include",
  ]

  sources = [ "usbddk_fuzzer.cpp" ]

  deps = [ "../../../ddk:libusb_core" ]

  external_deps = [
    "c_utils:utils",
    "drivers_interface_usb:libusb_ddk_stub_1.0",
    "drivers_interface_usb:libusb_proxy_1.0",
    "drivers_interface_usb:usb_ddk_idl_headers",
    "hdf_core:libhdf_utils",
    "hdf_core:libhdi",
    "hilog:libhilog",
    "ipc:ipc_single",
  ]
}

group("fuzztest") {
  testonly = true
  deps = []
  deps += [ ":UsbDdkFuzzTest" ]
}
