import("//build/config/features.gni")
import("//build/ohos.gni")
import("//build/test.gni")
module_output_path = "drivers_peripheral_usb/drivers_peripheral_usb"

ohos_fuzztest("UsbdeviceFuzzTest") {
  module_out_path = module_output_path

  fuzz_config_file = "./../../usbdevice_fuzzer"

  include_dirs = [
    "./../../../../hdi_service/include",
    "./../../../../interfaces/ddk/host",
    "./../../../../interfaces/ddk/common",
    "./../../../../gadget/function/include",
  ]
  sources = [ "usbdevice_fuzzer.cpp" ]

  deps = [
    "./../../../../../interface/usb/v1_0:libusb_stub_1.0",
    "./../../../../ddk:libusb_core",
  ]

  if (is_standard_system) {
    external_deps = [
      "hdf_core:libhdf_utils",
      "hilog:libhilog",
      "ipc:ipc_single",
    ]
    if (usb_c_utils_enable) {
      external_deps += [ "c_utils:utils" ]
    }
  } else {
    external_deps = [ "hilog:libhilog" ]
  }

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
}

group("fuzztest") {
  testonly = true
  deps = []
  deps += [ ":UsbdeviceFuzzTest" ]
}
