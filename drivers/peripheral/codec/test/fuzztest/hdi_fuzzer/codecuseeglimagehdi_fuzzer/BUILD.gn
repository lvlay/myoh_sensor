import("//build/config/features.gni")
import("//build/test.gni")
module_output_path = "drivers_peripheral_codec/drivers_peripheral_codec"

ohos_fuzztest("CodecUseEglImageHdiFuzzTest") {
  module_out_path = module_output_path
  codec_root = "../../../../"
  fuzz_config_file =
      "${codec_root}/test/fuzztest/hdi_fuzzer/codecuseeglimagehdi_fuzzer"

  include_dirs = [
    "${codec_root}/interfaces/include",
    "${codec_root}/hal/include",
    "${codec_root}/test/fuzztest/hdi_fuzzer/codecuseeglimagehdi_fuzzer",
    "${codec_root}/test/fuzztest/hdi_fuzzer/codeccommonhdi_fuzzer",
  ]

  external_deps = [
    "c_utils:utils",
    "drivers_interface_codec:libcodec_proxy_3.0",
    "graphic_surface:buffer_handle",
    "hdf_core:libhdf_host",
    "hdf_core:libhdf_ipc_adapter",
    "hdf_core:libhdf_utils",
    "hdf_core:libhdi",
    "hilog:libhilog",
    "ipc:ipc_single",
    "openmax:libopenmax_static",
  ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]

  sources = [
    "../codeccommonhdi_fuzzer/codeccallback_fuzzer.cpp",
    "../codeccommonhdi_fuzzer/codeccommon_fuzzer.cpp",
    "codecuseeglimage_fuzzer.cpp",
  ]
}

group("fuzztest") {
  testonly = true
  deps = []
  deps += [ ":CodecUseEglImageHdiFuzzTest" ]
}
