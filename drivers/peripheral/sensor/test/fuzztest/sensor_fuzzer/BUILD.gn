import("//build/config/features.gni")
import("//build/ohos.gni")
import("//build/test.gni")
module_output_path = "drivers_peripheral_sensor/drivers_peripheral_sensor"

ohos_fuzztest("SensorFuzzTest") {
  module_out_path = module_output_path

  fuzz_config_file = "../sensor_fuzzer"

  include_dirs = [
    "../sensor_fuzzer",
    "../../../hdi_service",
  ]

  sources = [ "sensor_fuzzer.cpp" ]

  deps = [ "../../../hal:hdi_sensor" ]

  external_deps = [
    "c_utils:utils",
    "drivers_interface_sensor:libsensor_stub_2.0",
    "hdf_core:libhdf_ipc_adapter",
    "hdf_core:libhdf_utils",
    "hdf_core:libhdi",
    "hilog:libhilog",
    "ipc:ipc_single",
  ]
}

group("hdf_fuzztest_sensor") {
  testonly = true
  deps = []
  deps += [
    # deps file
    ":SensorFuzzTest",
  ]
}
