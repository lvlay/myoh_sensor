import("//build/ohos.gni")
import("//build/test.gni")

module_output_path = "drivers_peripheral_display/display"

ohos_benchmarktest("hdf_display_benchmark_test") {
  module_out_path = module_output_path
  sources = [ "display_benchmark_test.cpp" ]
  deps = [ "../common:disp_dev_hdi_test_common" ]
  include_dirs = [
    "../common",
    ".",
