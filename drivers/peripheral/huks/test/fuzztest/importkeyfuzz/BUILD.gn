import("//build/config/features.gni")
import("//build/test.gni")

ohos_fuzztest("huks_hdi_importkey_fuzz") {
  module_out_path = "hdf/huks"
  fuzz_config_file = "../importkeyfuzz"
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  include_dirs = [
    "../../../hdi_service",
    "../",
  ]

  defines = [ "HUKS_HDI_SOFTWARE" ]

  sources = [
    "../huks_hdi_fuzz_common.cpp",
    "huks_hdi_fuzzer.cpp",
  ]

  deps = [ "../../../hdi_service:libhuks_hdi_service_1.0" ]

  external_deps = [
    "c_utils:utils",
    "drivers_interface_huks:huks_idl_headers",
    "hilog:libhilog",
  ]

  subsystem_name = "hdf"
  part_name = "drivers_peripheral_huks"
}
