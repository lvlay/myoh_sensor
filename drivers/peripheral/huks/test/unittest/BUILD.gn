import("//build/ohos.gni")
import("//build/test.gni")

module_output_path = "drivers_peripheral_huks/huks_hdi_unittest"

ohos_unittest("huks_hdi_unittest") {
  module_out_path = module_output_path

  include_dirs = [ "../../hdi_service" ]

  sources = [
    "hdi_ihuks_api_compat_test.cpp",
    "hdi_ihuks_api_function_test.cpp",
    "huks_hdi_test_util.c",
  ]

  cflags = [
    "-Wall",
    "-Wextra",
    "-Werror",
    "-fsigned-char",
    "-fno-common",
    "-fno-strict-aliasing",
  ]

  if (is_standard_system) {
    deps = [ "../../hdi_service:libhuks_hdi_service_1.0" ]
    external_deps = [
      "c_utils:utils",
      "drivers_interface_huks:libhuks_proxy_1.0",
      "hdf_core:libhdf_utils",
      "hdf_core:libhdi",
      "hilog:libhilog",
    ]
  } else {
    external_deps = [ "hilog:libhilog" ]
  }
}
