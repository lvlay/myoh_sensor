import("//build/ohos.gni")

HAL_ROOT_DIR = "./.."

if (defined(ohos_lite)) {
  ohos_shared_library("wifi_hal") {
    sources = [
      "src/wifi_hal.c",
      "src/wifi_hal_ap_feature.c",
      "src/wifi_hal_base_feature.c",
      "src/wifi_hal_cmd.c",
      "src/wifi_hal_sta_feature.c",
      "src/wifi_hal_util.c",
    ]

    include_dirs = [
      "include",
      "$HAL_ROOT_DIR/interfaces/include",
      "$HAL_ROOT_DIR/client/include",
      "//third_party/bounds_checking_function/include",
    ]

    deps = [ "//third_party/bounds_checking_function:libsec_shared" ]
    external_deps = [
      "hdf_core:hdf_posix_osal",
      "hdf_core:libhdf_utils",
    ]
    defines = [ "__USER__" ]

    cflags = [
      "-Wall",
      "-Wextra",
      "-Werror",
      "-fsigned-char",
      "-fno-common",
      "-fno-strict-aliasing",
      "-Wno-format",
      "-Wno-format-extra-args",
    ]
    subsystem_name = "hdf"
    part_name = "drivers_peripheral_wlan"
  }
} else {
  ohos_shared_library("wifi_hal") {
    sources = [
      "src/wifi_hal.c",
      "src/wifi_hal_ap_feature.c",
      "src/wifi_hal_base_feature.c",
      "src/wifi_hal_cmd.c",
      "src/wifi_hal_p2p_feature.c",
      "src/wifi_hal_sta_feature.c",
      "src/wifi_hal_util.c",
    ]
    include_dirs = [
      "include",
      "$HAL_ROOT_DIR/interfaces/include",
      "$HAL_ROOT_DIR/client/include",
    ]
    deps = [ "$HAL_ROOT_DIR/client:wifi_driver_client" ]
    defines = [ "__OHOS__USER__" ]
    cflags = [
      "-Wall",
      "-Wextra",
      "-Werror",
      "-fsigned-char",
      "-fno-common",
      "-fno-strict-aliasing",
    ]
    install_images = [ chipset_base_dir ]
    subsystem_name = "hdf"
    part_name = "drivers_peripheral_wlan"
    if (is_standard_system) {
      external_deps = [
        "c_utils:utils",
        "hdf_core:libhdf_utils",
        "hilog:libhilog",
      ]
    } else {
      external_deps = [ "hilog:libhilog" ]
    }
  }
}
