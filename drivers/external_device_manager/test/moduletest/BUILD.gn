group("external_device_manager_mt") {
  deps = [
    ":bus_extension_core_mt",
    ":bus_extension_usb_mt",
    ":driver_extension_controller_mt",
    ":drivers_pkg_manager_mt",
    ":ext_device_manager_mt",
  ]
}
