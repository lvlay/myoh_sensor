import("//build/config/features.gni")
import("//build/test.gni")
module_output_path = "hdf_core/hdf_core"

hdf_framework_path = "./../../../../../framework"

ohos_fuzztest("LoadDriverByServiceNameFuzzTest") {
  module_out_path = module_output_path

  fuzz_config_file = "$hdf_framework_path/test/fuzztest/ioservice_fuzzer/loaddriverbyservicename_fuzzer"

  include_dirs = [ "$hdf_framework_path/test/fuzztest/ioservice_fuzzer/loaddriverbyservicename_fuzzer.h" ]
  sources = [ "loaddriverbyservicename_fuzzer.cpp" ]
  deps = [ "../../../../../adapter/uhdf2/utils:libhdf_utils" ]
  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
  ]
}

group("fuzztest") {
  testonly = true
  deps = [ ":LoadDriverByServiceNameFuzzTest" ]
}
